@model DoAnCoSo.ViewModels.ChangePassword

@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style>
    .changePassword {
        width: 100%;
        margin: 0 auto;
    }

    .changePass_Form {
        width: 350px;
        margin: 0 auto;
        padding: 20px;
        border: 2px solid #ccc;
        border-radius: 10px;
        background-color: #f9f9f9;
    }

        .changePass_Form p {
            font-size: 20px;
            font-weight: bold;
            text-align: center;
            margin-bottom: 20px;
        }

    .errorChangeEmail,
    .errorChangePassword,
    .errorNewConfirmPassword,
    .errorChangeConfirmPassword {
        color: red;
        margin-bottom: 10px;
    }

    .errorChangeEmail,
    .errorChangePassword,
    .errorNewConfirmPassword,
    .errorChangeConfirmPassword {
        text-align: center;
    }

    .changePass_Form input[type="text"],
    .changePass_Form input[type="password"] {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        box-sizing: border-box;
        margin-top: 5px;
    }

    .change_submit {
        width: 100%;
        padding: 10px;
        border: none;
        border-radius: 5px;
        background-color: #4CAF50;
        color: white;
        font-size: 16px;
        cursor: pointer;
        margin-top: 15px;
    }

        .change_submit:hover {
            background-color: #45a049;
        }
</style>
<div class="changePassword">

    @using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post))
    {
    @Html.AntiForgeryToken()


    <div class="changePass_Form">
        <p>Thay đổi mật khẩu</p>


        <div class="errorChangeEmail" style="text-align:center">
            @Html.ValidationMessageFor(m => m.email, "")
        </div>

        <div style="text-align:center">
            @Html.TextBoxFor(m => m.email, new { placeholder = "Email" })
        </div>



        <div class="errorChangePassword" style="text-align:center">
            @Html.ValidationMessageFor(m => m.password, "")
        </div>

        <div style="text-align:center">
            @Html.PasswordFor(m => m.password, new { placeholder = "Mật khẩu" })
        </div>
        <div class="errorNewConfirmPassword" style="text-align:center">
            @Html.ValidationMessageFor(m => m.newPassword, "")
        </div>

        <div style="text-align:center">
            @Html.PasswordFor(m => m.newPassword, new { placeholder = "Mật khẩu mới" })
        </div>


        <div class="errorChangeConfirmPassword" style="text-align:center">
            @Html.ValidationMessageFor(m => m.confirmPassword, "")
        </div>

        <div style="text-align:center">
            @Html.PasswordFor(m => m.confirmPassword, new { placeholder = "Xác nhận mật khẩu" })
        </div>


        <input type="submit" class="change_submit" value="Lưu" />
    </div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
    }
</div>



