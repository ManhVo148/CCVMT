<!-- Bước 2: Bao gồm Bootstrap JavaScript -->
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
<script>
    $(document).ready(function() {
        // Kiểm tra TempData có chứa thông điệp không
        var message = '@TempData["Message"]';
        if (message) {
            // Hiển thị cảnh báo nếu có
            alert(message);
        }
    });


    $(document).ready(function() {
        // Lắng nghe sự kiện khi giá trị của input "font-size-range" thay đổi
        $("#font-size-range").on("input", function() {
            var fontSize = $(this).val() + "px";
            $("#chapter-content").css("font-size", fontSize);
        });

        // Lắng nghe sự kiện khi giá trị của select "font-family-select" thay đổi
        $("#font-family-select").on("change", function() {
            var fontFamily = $(this).val();
            $("#chapter-content").css("font-family", fontFamily);
        });

        // Lắng nghe sự kiện khi nút "Cập nhật nội dung" được click
        $("#update-content-btn").on("click", function() {
            // Gửi yêu cầu AJAX để lấy dữ liệu mới
            $.ajax({
                url: "/Truyen/GetNewContent", // Địa chỉ URL của action trong controller để lấy dữ liệu mới
                method: "GET",
                success: function(data) {
                    // Cập nhật nội dung của phần tử "chapter-content" với dữ liệu mới
                    $("#chapter-content").html(data);
                },
                error: function(xhr, status, error) {
                    console.log("Lỗi khi lấy dữ liệu mới:", error);
                }
            });
        });
    });


    
</script>


<style>
    .dropdown-menu {
        background-color: #ffffff; /* Màu nền của dropdown */
        border: 1px solid #ced4da; /* Viền của dropdown */
    }

        .dropdown-menu a {
            color: #212529; /* Màu chữ của các lựa chọn trong dropdown */
            padding: 0.5rem 1rem; /* Khoảng cách giữa nội dung và viền của dropdown */
