
@model DoAnCoSo.Models.Chapter

@{
    ViewBag.Title = "CreateChap";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}
@using (Html.BeginForm())
{

@Html.AntiForgeryToken()
<p>@Session["story_id"]</p>

<div class="form-horizontal">
    <h4>Sản phẩm</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <input type="hidden" name="story_id" value="@Session["story_id"]" />
    <div class="createproduct_errorName">
        @Html.ValidationMessageFor(m => m.title)
    </div>
    <div class="form-group">

        <p>Tiêu đề</p>

        <div class="col-md-10">
            @Html.EditorFor(model => model.title, new { htmlAttributes = new { @class = "form-control" } })
            @*@Html.ValidationMessageFor(model => model.title, "", new { @class = "text-danger" })*@
        </div>
    </div>
    <div class="form-group">

        <p>Chương</p>

        <div class="col-md-10">
            @Html.EditorFor(model => model.chap, new { htmlAttributes = new { @class = "form-control" } })
            @*@Html.ValidationMessageFor(model => model.title, "", new { @class = "text-danger" })*@
        </div>
    </div>


    <div class="form-group">
        <p>Nội dung</p>
        <div class="col-md-10">
            @Html.EditorFor(model => model.content, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.content, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="info_back">

        <div class="back_to_list">
            @Html.ActionLink("Huỷ", "ManagerProduct")
        </div>

        <div class="info_submit">
            <input type="submit" value="Tạo" class="info_create" />
        </div>


    </div>

</div>

@*@section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }*@
}